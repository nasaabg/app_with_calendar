<!-- Button trigger modal -->
<button class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">
  Zapytaj o rezerwację
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Rezerwacja</h4>
      </div>
      <%= form_for @reservation do |f| %>
      <div class="row">
        <div class="col-md-10  col-sm-offset-1">
            <div class="form-group col-sm-6 text-center">
              <label>Początek</label><br>
                <%= f.text_field :checkin, id: "from", placeholder: "rr-mm-dd" %>
            </div>
            <div class="form-group col-sm-6 text-center">
              <label>Koniec</label><br>
                <%= f.text_field :checkout, id: "to", placeholder: "rr-mm-dd" %>
            </div>
        </div>
      </div>
      <br>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
        <%= f.submit "Wyślij" , class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>